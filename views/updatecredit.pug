doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Goods sold on credit
  link(rel='stylesheet' href='/css/form.css')
  link(rel='stylesheet' href='/css/credit.css')
body 
  .container
    h1 Credit Sales
    form.goods-sold-form(action='/updatecredit?id='+credit._id method='POST')
      label(for='buyer') Name of Buyer:
      input#buyer(type='text' name='buyer' value = credit.buyer)
      
      
      label(for='nin') National ID (NIN):
      input#nin(type='text' name='nin' value = credit.nin)
      
      
      label(for='location') Location:
      input#location(type='text' name='location' value = credit.location)
      
      
      label(for='contact') Contact:
      input#contact(type='text' name='contact' value = credit.contact)
      
      label(for='amountDue') Amount Due:
      input#amountDue(type='number' name='amountDue' value = credit.amountDue)
     
      label(for='salesAgentName') Sales Agent Name:
      input#salesAgentName(type='text' name='salesAgentName' value = credit.salesAgentName)
      
      label(for='dueDate') Due Date:
      input#dueDate(type='date' name='dueDate' value = credit.dueDate)
    
      label(for='theProduceName') The Produce Name:
      input#theProduceName(type='text' name='theProduceName' value = credit.theProduceName)
      
      
      label(for='typeOfProduce') Type of Produce:
      select#typeOfProduce(name='typeOfProduce' value = credit.typeOfProduce)
        option(value='' selected='') Select Produce Type
        option(value='Grains') Grains
        option(value='Legumes') Legumes
      
      
      label(for='quantity') Tonnage in Kgs:
      input#quantity(type='text' name='quantity' value = credit.quantity)
      
      
      label(for='date') Date of Dispatch:
      input#date(type='date' name='date' value = credit.date)
      
      
      input(type='submit' value='Submit')
