head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales Dashboard
  link(rel='stylesheet' href='/css/manager-dashboard.css')
header
  nav.navbar
    .navbar-brand Sales Dashboard
    ul.navbar-nav
      li.nav-item
        a(href='#') Home
      li.nav-item
        a(href='#') Reports
      li.nav-item
        a(href='#') Settings
    .search-bar
      input#search(type='text' placeholder='Search...')
main
  .dashboard
    .card
      h3 Total Sales
      p#total-sales $0
    .card
      h3 Number of Transactions
      p#num-transactions 0
    .card
      h3 Average Sale Value
      p#avg-sale-value $0
    .card
      h3 Top Sales Agent
      p#top-sales-agent None
